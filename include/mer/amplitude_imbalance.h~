#include <mer/demapper.h>
namespace gr {
  namespace mer {

    /*!
     * \brief <+description+>
     *
     */
    class MER_API amplitude_imbalance
    {
    public:
      amplitude_imbalance(int dim_constellation, double alpha, demapper *demap);
